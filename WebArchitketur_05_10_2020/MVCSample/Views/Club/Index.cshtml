@model IEnumerable<MVCSample.Models.Clubs>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoundingYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransferBudget)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArenaCapacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArenaName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FoundingYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransferBudget)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArenaCapacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArenaName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
